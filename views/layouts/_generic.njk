    <meta name="robots" content="noindex, nofollow">
  {% endif %}
  <meta name="og:title" content="{{title}}">
  <meta name="description" content="{{description}}">
  <meta name="og:description" content="{{description}}">
  <link rel="canonical" href="{{ canonical }}">
